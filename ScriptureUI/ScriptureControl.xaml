<UserControl x:Class="ScriptureUI.ScriptureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:local="clr-namespace:ScriptureUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <!-- Label -->
        <Label Content="Please enter description of the script" />

        <!-- Multiline TextBox -->
        <TextBox x:Name="ScriptDescriptionTextBox" Height="100" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />

        <!-- Generate Script -->
        <Button Content="Generate Script" Margin="0,10,0,0" Click="OnGenerateScriptClick" />

        <!-- Placeholder for AvalonEdit (Collapsible) -->
        <Expander Header="Script Editor" IsExpanded="False">
            <avalonedit:TextEditor Name="ScriptEditor" Height="200" />
        </Expander>

        <!-- Status Label -->
        <Label Content="Script Status: Not ready" Name="ScriptStatusLabel" />

        <!-- Execute Button -->
        <Button Content="Execute Script" Margin="0,10,0,0" />
    </StackPanel>

</UserControl>
